[Unit]
Description=Registrator Etcd
After=etcd.service
Requires=etcd.service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill registrator-etcd
ExecStartPre=-/usr/bin/docker rm registrator-etcd
ExecStartPre=/usr/bin/docker pull progrium/registrator:latest

ExecStart=/bin/bash -c 'docker run --name registrator-etcd --hostname %H -v /var/run/docker.sock:/tmp/docker.sock progrium/registrator:latest etcd://${COREOS_PRIVATE_IPV4}:4001/services'

ExecStop=/usr/bin/docker stop registrator-etcd

[X-Fleet]
Global=true
